@model VmBase

@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Home Page";
}

<div class="banner">
    <div class="banner-layout"></div>
    <picture>
        <source media="(min-width: 992px)" srcset="~/Uploads/Images/PageHeader/@Model.pageHeader.Image">
        <img class="bg-img" src="~/Uploads/Images/PageHeader/@Model.pageHeader.Image" alt="img">
    </picture>
    <div class="align-container">
        <div class="align-container-item">
            <div class="container">
                <div class="row align-items-center position-relative ">
                    <div class="col-lg-7 col-xl-6">
                        <h2 class="banner-title">
                            @Model.pageHeader.Title<span class="banner-overlay">TransX</span>
                        </h2>
                        <p class="banner-subtitle">
                            @Model.pageHeader.Subtitle
                        </p><a class="button button-style-two" asp-controller="request" asp-action="index">
                            <span>
                                Explore
                                more
                            </span>
                            <svg class="icon">
                                <use xlink:href="#arrow"></use>
                            </svg>
                        </a>
                    </div>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="col-md-7 col-lg-5 col-xl-4 offset-xl-2 martop-50  ">
                            <form class=" form banner-form" id="requestquote-form" style="background-image: url(@Url.Content("~/img/form-bg.png"))">
                                <div class="form-context ">
                                    <h6 class="form-title">Request a Quote</h6>
                                    <p class="form-subtitle">
                                        Pacific hake false trevally queen parrotfish Black
                                        prickleback humuhumunukunukuapua'a
                                    </p>
                                    <label>
                                        <svg class="icon">
                                            <use xlink:href="#pin"></use>
                                        </svg>
                                        <input class="form-input" type="text" id="from-input" placeholder="From">
                                    </label>
                                    <label>
                                        <svg class="icon">
                                            <use xlink:href="#pin"></use>
                                        </svg>
                                        <input type="text" class="form-input" id="to-input" placeholder="To">
                                    </label>
                                    <label>
                                        <svg class="icon">
                                            <use xlink:href="#calendar_2"></use>
                                        </svg>
                                        <input type="datetime-local" class="form-input" id="when-input" placeholder="Data"
                                               data-toogle="datepicker">
                                    </label>
                                    <select class="form-select" aria-label="Default select example" id="service-input" asp-items="@(new SelectList(ViewBag.Services, "Id", "Title"))">
                                    </select>
                                </div>
                                <input class="form-submit" type="submit" value="Send Request">
                            </form>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
<section id="about" class="section-style">
    <div class="container">
        <div class="row flex-column-reverse flex-xl-row">
            <div class="col-xl-5 col-lg-7 col-md-8 martop-50">
                <div class="counter-area  text-center text-sm-left">
                    <img class="bg-img" src="~/img/map_back.png" alt="">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <div class="single-counterup">
                                <span class="count-num green-color me-2">@Model.HomeAbout.ExperianceTransportation</span>
                                <span class="green-color count-sub">yrs</span>
                                <h6 class="title">Experiance in transportation</h6>

                            </div>
                        </div>
                        <div class="col-12">
                            <div class="single-counterup">
                                <span class="count-num green-color me-2">@Model.HomeAbout.SkilledDrivers</span>
                                <span class=" green-color count-sub">+</span>
                                <h6 class="title">Skilled drivers in our fleet</h6>

                            </div>
                        </div>
                        <div class="col-12">
                            <div class="single-counterup">
                                <span class="count-num green-color me-2">@Model.HomeAbout.MillesDrivenPerYear</span>
                                <span class="count-sub green-color">billion</span>
                                <p class="title">Milles driven per year</p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 offset-xl-1 ">
                <div class="title-style-one">
                    <span class="pre-title">About transx</span>
                    <h3 class="title">@Model.HomeAbout.Title</h3><span class="title-layout">About</span>
                </div>
                <p>
                    @Html.Raw(Model.HomeAbout.Content)
                </p>
                <a class="button button-border-green marbot-40 " asp-controller="about" asp-action="index">
                    <span>More about</span>
                    <svg class="icon">
                        <use xlink:href="#arrow"></use>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>
<section id="services" class="bg-ligray pb-0 servicestyle section-style">
    <div class="container marbot-70">
        <div class="row">
            <div class="col-lg-4">
                <div class="title-style-one">
                    <span class="pre-title">Services</span>
                    <h3 class="title">Transporterium Services </h3><span class="title-layout bordlaygrey">Services</span>
                </div>
                <a class="button button-border-green d-none d-lg-inline-block " asp-controller="service" asp-action="index">
                    <span>
                        All
                        services
                    </span>
                    <svg class="icon">
                        <use xlink:href="#arrow"></use>
                    </svg>
                </a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row maroffset-50">
            @{ var i = 1;
                var j = 0;}
            @foreach (var item in Model.Services.Take(4))
            {
                <div class="col-md-6 col-xl-3">
                    <div class="service-card">
                        <div class="service-overlay"></div>
                        <div class="service-layout">Transporterium Services</div><img class="bg-img"
                                                                                      src="~/Uploads/Images/Services/@item.Image" alt="img">
                        <div class="service-details">
                            <h5 class="service-title"><a asp-controller="service" asp-action="details" asp-route-id="@item.Id">@item.Title</a></h5>
                            <div class="service-count">
                                @if (i < 10)
                                {
                                    j = 0;@j @i
                                }
                                else
                                {
                                    @i
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="container martop-50 d-block d-lg-none position-absolute">
        <div class="row ">
            <div class="col-12 text-center ">
                <a class="button button-border-green " href="#">
                    <span>All services</span>
                    <svg class="icon">
                        <use xlink:href="#arrow"></use>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>
<section id="transx-img" class="section-style">
    @if (Model.HomeImage != null)
    {
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <img src="~/Uploads/Images/Home/@Model.HomeImage.Image" alt="">
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="banner-area-wrapper">
            <div class="container">
                <div class="row">
                    <h3 class="alert alert-danger text-center">Home Image Elave Edin</h3>
                </div>
            </div>
        </div>
    }
</section>
<section id="cases" class="pt-0 section-style p-0">
    <div class="container marbot-70">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-style-one title-center">
                    <span class="pre-title">Case Studies</span>
                    <h3 class="title"> Featured Case Studies</h3><span class="title-layout bordlaygrey">Cases</span>
                </div>
            </div>
            <div class="col-lg-12">
                <p>
                    Orbicular velvetfish yellowfin tuna aruana leatherjack trout streamer fish kaluga
                    sailback scorpionfish sand dab, turkeyfish Kuhli loach kelpfish lookdown catfish cuchia
                    Bengal danio flagblenny clown triggerfish common tunny baikal oilf.
                </p>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="slider">
                @foreach (var item in Model.CaseStudies)
                {
                    <div class="slider-card">
                        <img class="bg-img" src="~/Uploads/Images/Home/@item.Image" alt="">
                        <div class="slider-content">
                            <h4 class="slider-title">Bills of landingterms</h4><a class="slider-link" href="#"
                                                                                  tabindex="0">
                                <span>Research Now</span>
                                <svg class="icon">
                                    <use xlink:href="#arrow"></use>
                                </svg>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
@await Component.InvokeAsync("Testimonial");
<section id="blog" class="bg-ligray section-style ">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="title-style-one title-center">
                    <span class="pre-title">Blog</span>
                    <h3 class="title">Latest Articles <span class="green-color">Daily</span> Update</h3>
                    <span class="title-layout bordlaygrey">Blog</span>
                </div>
            </div>
        </div>
        <div class="row ">
            @foreach (var blog in Model.Blogs.Take(1))
            {
                if (blog.BlogStatus == BlogStatus.Active)
                {
                    <div class="col-lg-6 col-xl-8 ">
                        <div class=" blog-card blgcard-style-one card-wide">
                            <img class="bg-img" src="~/Uploads/Images/Blogs/@blog.Image" alt="img">
                            <div class="card-content">
                                <h6 class="blgcard-title"><a asp-controller="Blog" asp-action="details" asp-route-id="@blog.Id">@blog.Title</a></h6>
                                <p>
                                    @Html.Raw(blog.Content.Length > 87 ? blog.Content.Substring(0, 87) : blog.Content)...
                                </p>
                            </div>
                            <div class="card-details">
                                <span class="blgcard-data">@blog.AddedDate.Date.ToString("dd MMMM yyyy")</span>
                                <span>@(blog.Comments != null ? blog.Comments.Count : 0) Comments</span>
                            </div>
                        </div>
                    </div>
                }
            }

            @foreach (var blog in Model.Blogs.Skip(1).Take(3))
            {
                if (blog.BlogStatus == BlogStatus.Active)
                {
                    <div class="col-lg-6 col-xl-4 ">
                        <div class="blog-card blgcard-style-two card-small">
                            <div class="card-small-img">
                                <img class="bg-img" src="~/Uploads/Images/Blogs/@blog.Image" alt="img">
                            </div>
                            <div class="card-content">
                                <h6 class="blgcard-title"><a asp-controller="Blog" asp-action="details" asp-route-id="@blog.Id">@blog.Title</a></h6>
                                <p>
                                    @Html.Raw(blog.Content.Length > 87 ? blog.Content.Substring(0, 87) : blog.Content)...
                                </p>

                                <div class="card-details">
                                    <span class="blgcard-data">@blog.AddedDate.Date.ToString("dd MMMM yyyy")</span>
                                    <span>@(blog.Comments != null ? blog.Comments.Count : 0) Comments</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

            @foreach (var blog in Model.Blogs.Skip(4).Take(1))
            {
                if (Model.Blogs.Count > 4 && blog.BlogStatus == BlogStatus.Active)
                {
                    <div class="col-lg-6 col-xl-4 ">
                        <div class=" blog-card blgcard-style-one card-wide">
                            <img class="bg-img" src="~/Uploads/Images/Blogs/@blog.Image" alt="img">
                            <div class="card-content">
                                <h6 class="blgcard-title"><a asp-controller="Blog" asp-action="details" asp-route-id="@blog.Id">@blog.Title</a></h6>
                                <p>
                                    @Html.Raw(blog.Content.Length > 87 ? blog.Content.Substring(0, 87) : blog.Content)...
                                </p>
                            </div>
                            <div class="card-details">
                                <span class="blgcard-data">@blog.AddedDate.Date.ToString("dd MMMM yyyy")</span>
                                <span>@(blog.Comments != null ? blog.Comments.Count : 0) Comments</span>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>

</section>
@await Component.InvokeAsync("Partners");