@model VmProfile
@{
    ViewData["Title"] = "SavedBlogs";
    ViewBag.Section = "savedblogs";
}

<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">

                <h2 class="ipt-title">Welcome!</h2>
                <span class="ipn-subtitle">Welcome To Your Account</span>

            </div>
        </div>
    </div>
</div>
<section class="bg-light my-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="filter_search_opt">
                    <a href="javascript:void(0);" onclick="openFilterSearch()">Dashboard Navigation<i class="ml-2 ti-menu"></i></a>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-lg-3 col-md-12">

                <div class="simple-sidebar sm-sidebar" id="filter_search">

                    <div class="search-sidebar_header">
                        <h4 class="ssh_heading">Close Filter</h4>
                        <button onclick="closeFilterSearch()" class="w3-bar-item w3-button w3-large"><i class="ti-close"></i></button>
                    </div>

                    <partial name="_DashboardNavbar" />

                </div>
            </div>

            <div class="col-lg-9 col-md-12">
                <div class="dashboard-wraper">

                    <!-- Bookmark Property -->
                    <div class="form-submit">
                    </div>

                    <table class="property-table-wrap responsive-table bkmark">

                        <tbody>
                            <tr>
                                <th><i class="fa fa-file-text"></i> List of saved blogs</th>
                                <th></th>
                            </tr>

                            @if (Model.SavedBlogs.Count != 0)
                            {
                                @foreach (var post in Model.SavedBlogs)
                                {
                                    <tr>
                                        <td class="property-container">
                                            <img src="~/Uploads/Images/Blogs/@post.Blog.Image" alt="">
                                            <div class="title">
                                                <h4><a asp-controller="Blog" asp-action="details" asp-route-id="@post.Blog.Id">@post.Blog.Title</a></h4>
                                                <span>@Html.Raw(post.Blog.Content.Length > 33 ? post.Blog.Content.Substring(0, 33) : post.Blog.Content)... </span>
                                                <span class="table-property-price">@post.Blog.Category.Name</span>
                                            </div>
                                        </td>
                                        <td class="action">
                                            <a onclick="return confirm('Are you sure?')" asp-controller="account" asp-action="savedblogsdelete" asp-route-id="@post.Id" class="delete"><i class="ti-close"></i> Delete</a>

                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>List of saved blogs is empty</td>
                                </tr>
                            }


                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</section>
