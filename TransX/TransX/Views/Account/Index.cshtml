<section class="hero-banner">
    <div class="container-fluid">
        <div class="img"style="background:radial-gradient(black,transparent); height:28rem;"
             height: 350px;background-size: cover; border-top-left-radius: 50px; border-top-right-radius: 50px;"></div>
        <div class="card social-prof">
            <div class="card-body">
                <div class="wrapper">
                    @if (Model.User.Image != null)
                    {
                        <img src="~/Uploads/Images/Blogs/@Model.User.Image" alt="" />
                    }
                    else
                    {
                        <img src="~/Uploads/Images/Accounts/avatar.png" alt="" />
                    }
                <h3>@Model.User.Name @Model.User.Surname</h3>
                    @*<p>@(Model.User.Profesion!=null?Model.User.Profesion:"")</p>*@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">

                <div class="card">
                    <div class="card-body">
                        <div class="h5 text-blue">@Model.User.Name @Model.User.Surname</div>
                        <div class="h7 "><strong>Email :</strong> @Model.User.Email</div>
                        <div class="h7">
                            @*<strong>About :</strong> @Model.User.About*@
                        </div>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="h6 text-muted">Number of posts</div>
                            <div class="h5">
                                Number of posts
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="h6 text-muted">Following</div>
                            <div class="h5">6758</div>
                        </li>
                        <li class="list-group-item">
                            <div class="h6 text-muted">Themes</div>
                            <div class="h5">6758</div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 gedf-main">
                <!--- \\\\\\\Post-->
                <div class="card social-timeline-card">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="posts-tab" data-toggle="tab" role="tab" aria-controls="posts" aria-selected="true">Share your insights</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <form asp-controller="post" asp-action="create" method="post" enctype="multipart/form-data">
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade active show" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                                    <div class="form-group">
                                        <input class="form-control" id="title" name="Title" placeholder="Title">
                                        <span id="messages" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="tab-pane fade active show" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                                    <div class="form-group">
                                        <label class="sr-only" for="message">Post</label>
                                        <textarea class="form-control" id="content" rows="3" name="Content" placeholder="What are you thinking?"></textarea>
                                    </div>
                                </div>
                                <div class="tab-pane fade active show" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                                    <div class="input-file">
                                        <img id="file_upload" src="~/Uploads/Images/no-image.png" alt="your image" class="upload-img" />
                                        <div class="input-file-upload">
                                            <span class="upload-label">Upload Image</span>
                                            <input type='file' onchange="readURL(this);" name="ImageFile" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="btn-toolbar justify-content-between">
                                <div class="btn-group">
                                    <button type="submit" class="drop btn-theme-primary">share</button>
                                </div>
                                <div class="btn-group">
                                    <button id="btnGroupDrop1" type="button" class="drop btn-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-globe"></i>
                                    </button>
                                    <div class="dropdown-menu " aria-labelledby="btnGroupDrop1">
                                        <a class="dropdown-item" href="#"><i class="fa fa-globe"></i> Public</a>
                                        <a class="dropdown-item" href="#"><i class="fa fa-users"></i> Friends</a>
                                        <a class="dropdown-item" href="#"><i class="fa fa-user"></i> Just me</a>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
                <!-- Post /////-->
                <!--- \\\\\\\Post-->
                @if (Model.Posts != null)
                {
                    @foreach (var item in Model.Posts)
                    {
                        @if (item.UserId == Model.User.Id)
                        {
                            <div class="card social-timeline-card">
                                <div class="card-header">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="mr-2 ">
                                                <div class="circle">
                                                    @if (item.User.Image != null)
                                                    {
                                                        <img src="~/Uploads/Images/Accounts/@item.User.Image" alt="" />
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Uploads/Images/Accounts/avatar.png" alt="" />
                                                    }

                                                    <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" style="enable-background:new -580 439 577.9 194;"
                                                         xml:space="preserve">  
                                                    <circle cx="50" cy="50" r="40" />
                                                     </svg>
                                                </div>
                                            </div>
                                            <div class="ml-2">
                                                <div class="h5 m-0 text-blue">@item.User.Name</div>
                                                @*<div class="h7 text-muted">@(item.User.Profesion!=null?item.User.Profesion:"")</div>*@
                                            </div>
                                        </div>
                                        <div class="dropdown">
                                            <button class="drop btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fa fa-ellipsis-h"></i>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                                                <div class="h6 dropdown-header">Configuration</div>
                                                <a class="dropdown-item text-danger" onclick="return confirm('Are you sure?')" asp-controller="post" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    @if (item.Image != null)
                                    {
                                        <div class="postimg">
                                            <img src="~/Uploads/Images/Blogs/@item.Image" alt="" />
                                        </div>
                                    }
                                    <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i> @item.AddedDate.ToString("dd MMM yyyy")</div>
                                    <h5 class="card-title">
                                        @item.Title
                                    </h5>
                                    <p class="card-text">
                                        @item.Content
                                    </p>
                                    <div>
                                        @*@foreach (PostTag tag in Model.Tags)
                                            {
                                                @if (tag.TagToPosts.Any(b => b.PostId != tag.Id))
                                                {
                                                    <a asp-controller="blog" asp-action="index" asp-route-tagId="@tag.Id" class="badge badge-primary">@tag.Name</a>
                                                }

                                            }*@
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a href="#" class="card-link"><i class="fa fa-gittip"></i> Like</a>
                                    <a href="#" class="card-link"><i class="fa fa-comment"></i> Comment</a>
                                    <a href="#" class="card-link"><i class="fa fa-mail-forward"></i> Share</a>
                                </div>
                            </div>
                        }

                    }

                }
                else
                {
                    <div class="banner-area-wrapper">
                        <div class="container">
                            <div class="row">
                                <h3 class="alert alert-danger text-center">Post Elave Edilmeyib</h3>
                            </div>
                        </div>
                    </div>
                }

                <!-- Post /////-->
            </div>
            <div class="col-lg-3">
                <div class="card social-timeline-card">
                    <div class="card-body">
                        <h5 class="card-title">People you may know</h5>
                        <ul class="friend-list">
                            @foreach (var user in Model.UserS)
                            {
                                <li>
                                    <div class="left">
                                        @if (user.Image != null)
                                        {
                                            <img src="~/Uploads/Images/Accounts/@user.Image">
                                        }
                                        else
                                        {
                                            <img src="~/Uploads/Images/Accounts/avatar.png">
                                        }
                                    </div>
                                    <div class="right">
                                        <h3>@user.Name</h3>
                                        <p>10 Friends</p>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>