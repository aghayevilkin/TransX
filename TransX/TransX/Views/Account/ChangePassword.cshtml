@model VmProfile
@{
    ViewData["Title"] = "ChangePassword";
    ViewBag.Section = "changepassword";
}


<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">

                <h2 class="ipt-title">Welcome!</h2>
                <span class="ipn-subtitle">Welcome To Your Account</span>

            </div>
        </div>
    </div>
</div>
<section class="bg-light">
    <div class="container-fluid">

        <div class="row">

            <div class="col-lg-3 col-md-12">

                <div class="simple-sidebar sm-sidebar" id="filter_search">

                    <div class="search-sidebar_header">
                        <h4 class="ssh_heading">Close Filter</h4>
                        <button onclick="closeFilterSearch()" class="w3-bar-item w3-button w3-large"><i class="ti-close"></i></button>
                    </div>

                    <partial name="_DashboardNavbar" />

                </div>
            </div>

            <div class="col-lg-9 col-md-12">
                <div class="dashboard-wraper">
                    <!-- Basic Information -->
                    <div class="form-submit">
                        <h4>Change Your Password</h4>
                        <div class="submit-section">
                            <form method="post" asp-controller="Account" asp-action="ChangePassword">
                                <div class="row">
                                    <div class="text text-danger text-center" asp-validation-summary="All"></div>
                                    <div class="form-group col-lg-12 col-md-6">
                                        <label>Old Password</label>
                                        <input type="password" asp-for="VmChangePassword.CurrentPassword" class="form-control">
                                        <span class="text text-danger" asp-validation-for="VmChangePassword.CurrentPassword"></span>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label>New Password</label>
                                        <input type="password" asp-for="VmChangePassword.NewPassword" class="form-control">
                                        <span class="text text-danger" asp-validation-for="VmChangePassword.NewPassword"></span>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label>Confirm password</label>
                                        <input type="password" asp-for="VmChangePassword.ConfirmPassword" class="form-control">
                                        <span class="text text-danger" asp-validation-for="VmChangePassword.ConfirmPassword"></span>
                                    </div>

                                    <div class="form-group col-lg-12 col-md-12">
                                        <button class="btn button-style-one rounded" type="submit">Save Changes</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>