@model VmProfile
@{ 
    ViewData["Title"] = "Update Profile";
}

<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">

                <h2 class="ipt-title">Welcome!</h2>
                <span class="ipn-subtitle">Welcome To Your Account</span>

            </div>
        </div>
    </div>
</div>
<section class="bg-light">
    <div class="container-fluid">

        <div class="row">

            <div class="col-lg-3 col-md-12">

                <div class="simple-sidebar sm-sidebar" id="filter_search">

                    <div class="search-sidebar_header">
                        <h4 class="ssh_heading">Close Filter</h4>
                        <button onclick="closeFilterSearch()" class="w3-bar-item w3-button w3-large"><i class="ti-close"></i></button>
                    </div>

                    <partial name="_DashboardNavbar" />

                </div>
            </div>

            <div class="col-lg-9 col-md-12">
                <div class="dashboard-wraper">
                    <div class="form-submit">
                        <h4>My Account</h4>
                        <div class="submit-section">
                            <form method="post" asp-controller="account" asp-action="UpdateUser">
                                <div class="text text-danger text-center" asp-validation-summary="All"></div>
                                <div class="row">

                                    <div class="form-group col-md-6">
                                        <label>Name</label>
                                        <input type="text" class="form-control" asp-for="User.Name">
                                        <span class="text text-danger" asp-validation-for="User.Name"></span>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label>Surname</label>
                                        <input type="text" class="form-control" asp-for="User.Surname">
                                        <span class="text text-danger" asp-validation-for="User.Surname"></span>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label>Email</label>
                                        <div class="form-control">@Model.User.Email</div>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label>Profision</label>
                                        <input type="text" class="form-control" asp-for="@Model.User.Profision">
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label>Adress</label>
                                        <input type="text" class="form-control" asp-for="@Model.User.Adress">
                                    </div>

                                    <div class="form-group col-md-12">
                                        <label>About</label>
                                        <textarea class="form-control form-control-text " asp-for="@Model.User.About"></textarea>
                                    </div>

                                    @*@foreach (var item in Model.UserS)
                                    {
                                        foreach (var item2 in item.SocialToUsers)
                                        {
                                            if (item2.UserId == Model.User.Id)
                                            {
                                                <div class="form-submit">
                                                    <h4>Social Accounts</h4>
                                                </div>

                                            }
                                            <div class="form-group col-md-6">
                                                <label>@item2.Social.Icon</label>
                                                <input type="text" class="form-control" readonly value="@item2.Link">
                                            </div>
                                        }
                                    }*@

                                    <div class="form-group col-lg-12 col-md-12">
                                        <button type="submit" asp-controller="account" asp-action="updateUser" class="btn button-style-one">Update</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>