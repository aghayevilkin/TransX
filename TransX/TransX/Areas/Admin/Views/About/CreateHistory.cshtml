@model History
@{
    ViewData["Title"] = "Create History";
}

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="mt-5">Create History</h2>
            </div>
            <div class="col-6">
                <form asp-controller="about" asp-action="CreateHistory" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="Name">Year</label>
                        <input class="form-control" asp-for="Year" placeholder="1">
                        <span id="messages" asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Title</label>
                        <input type="text" class="form-control" id="title" asp-for="Title" placeholder="Title">
                        <span id="messages" asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Subtitle</label>
                        <input class="form-control" asp-for="SubTitle" placeholder="Subtitle">
                        <span id="messages" asp-validation-for="SubTitle" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <button asp-action="index" class="btn btn-danger">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>