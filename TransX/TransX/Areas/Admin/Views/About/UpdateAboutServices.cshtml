@model AboutServices
@{
    ViewData["Title"] = "Update About Services";
}

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="mt-5">Update About Services</h2>
            </div>
            <div class="col-6">
                <form asp-controller="about" asp-action="UpdateAboutServices" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="Name">Title</label>
                        <input type="text" class="form-control" id="title" asp-for="Title" placeholder="Title">
                        <span id="messages" asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Icon</label>
                        <input type="text" class="form-control" id="title" asp-for="Icon" placeholder="Icon">
                        <span id="messages" asp-validation-for="Icon" class="text-danger"></span>
                    </div>

                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <button asp-action="index" class="btn btn-danger">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>