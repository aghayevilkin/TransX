@model List<Partner>
@{
    ViewData["Title"] = "Partners";
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Partners</h4>
            <div class="mr-2">
                <a asp-controller="partner" asp-action="create" class="btn btn-info"><i class="mdi mdi-plus-circle-outline"></i> Create</a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="width:340px; height:189px;"><img src="~/Uploads/Images/Partners/@item.Image" alt="image" width="100" style="width:100%; height:100%; border-radius: 10px; object-fit: none;" /></td>
                                <td><a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="partner" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>