@model VmRequest
@{
    ViewData["Title"] = "Requests";
    var counter = 0;
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Page Header</h4>
            <div class="mr-2">
                @if (Model.pageHeader == null)
                {
                    <a asp-controller="request" asp-action="createheader" class="btn btn-info"><i class="mdi mdi-plus-circle-outline"></i> Create PageHeader</a>
                }
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Subtitle
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @if (Model.pageHeader != null)
                            {
                                <td><img src="~/Uploads/Images/PageHeader/@Model.pageHeader.Image" alt="image" width="100" style=" width: 30rem; height: 100px; border-radius: 10px; object-fit: cover;" /></td>
                                <td>@Model.pageHeader.Title</td>
                                <td>@Model.pageHeader.Subtitle</td>
                                <td>
                                    <a asp-controller="request" asp-action="updateHeader" asp-route-id="@Model.pageHeader.Id" class="btn btn-primary"><i class="fas fa-pen"></i> Update</a>
                                </td>
                            }
                            else
                            {
                                <td class="alert alert-danger">Page Header  boshdur Xais olunur elave edin</td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
            <br />
            <h4 class="card-title">Requests</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="badge-dark">
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                User
                            </th>
                            <th>
                                Transport
                            </th>
                            <th>
                                From/To
                            </th>
                            <th>
                                /
                            </th>
                            <th>
                                WHWL
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Requests)
                        {
                            <tr>
                                <td class="btn btn-dark rounded-bottom rounded-right">@{counter++;}@counter.</td>
                                <td>
                                    <p>Name: @item.Name</p>
                                    <p>Email: @item.Email</p>
                                </td>
                                <td>@item.Service.Title</td>
                                <td>
                                    <p>DeliveryCity: @item.DeliveryCity</p>
                                    <p>DepartureCity: @item.DepartureCity</p>
                                </td>
                                <td>@item.InsuranceOrPackaging</td>
                                <td>
                                    <p>Weight: @item.Weight</p>
                                    <p>Height: @item.Height</p>
                                    <p>Widhth: @item.Widhth</p>
                                    <p>Lenght: @item.Lenght</p>
                                </td>

                                <td>
                                    <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="request" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>