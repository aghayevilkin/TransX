@model VmBase
@{
    ViewData["Title"] = "Contact";
    var counter = 0;
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Page Header</h4>
            <div class="mr-2">
                @if (Model.pageHeader == null)
                {
                    <a asp-controller="contact" asp-action="createheader" class="btn btn-info"><i class="mdi mdi-plus-circle-outline"></i> Create PageHeader</a>
                }

            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Subtitle
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @if (Model.pageHeader != null)
                            {
                                <td><img src="~/Uploads/Images/PageHeader/@Model.pageHeader.Image" alt="image" width="100" style=" width: 30rem; height: 100px; border-radius: 10px; object-fit: cover;" /></td>
                                <td>@Model.pageHeader.Title</td>
                                <td>@Model.pageHeader.Subtitle</td>
                                <td>
                                    <a asp-controller="contact" asp-action="updateHeader" asp-route-id="@Model.pageHeader.Id" class="btn btn-primary"><i class="fas fa-pen"></i> Update</a>
                                </td>
                            }
                            else
                            {
                                <td class="alert alert-danger">Page Header  boshdur Xais olunur elave edin</td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
            <br />
            <h4 class="card-title">Messages</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th><th>
                                Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Subject
                            </th>
                            <th>
                                Content
                            </th>
                            <th>
                                Date
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Messages)
                        {
                            <tr>
                                <td>@{counter++;}@counter.</td>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Subject</td>
                                <td>@item.Content</td>
                                <td>@item.AddedDate</td>
                                <td><a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="contact" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>