@model List<Subscribe>
@{
    ViewData["Title"] = "Subscribers";
    var counter = 0;
}


<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"></h4>
            <div class="mr-2">
                <h4 class="card-title">Subscribers</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Date
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@{counter++;}@counter.</td>
                                    <td>@item.Email</td>
                                    <td>@item.AddedDate</td>
                                    <td><a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="contact" asp-action="DeleteSubscriber" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>Subscriber list is empty</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>