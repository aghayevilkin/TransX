@model BlogTag
@{
    ViewData["Title"] = "CreateTag";
}

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form asp-area="admin" asp-controller="blog" asp-action="createtag" method="post">
                    <div class="form-group">
                        <label asp-for="@Model.Name">Name</label>
                        <input class="form-control" id="Name" asp-for="@Model.Name">
                        <span id="messages" asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Add</button>
                    <button asp-action="tag" class="btn btn-danger">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>