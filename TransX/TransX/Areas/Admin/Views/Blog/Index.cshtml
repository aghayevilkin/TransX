@model VmBlog
@{
    ViewData["Title"] = "Blog";
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Page Header</h4>
            <div class="mr-2">
                @if (Model.pageHeader == null)
                {
                    <a asp-controller="blog" asp-action="createheader" class="btn btn-info"><i class="mdi mdi-plus-circle-outline"></i> Create PageHeader</a>
                }
                @if (Model.pageHeaderDetails == null)
                {
                    <a asp-controller="blog" asp-action="Createheaderdetails" class="btn btn-info"><i class="mdi mdi-plus-circle-outline"></i> Create PageHeader Details</a>
                }

            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Subtitle
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @if (Model.pageHeader != null)
                            {
                                <td><img src="~/Uploads/Images/PageHeader/@Model.pageHeader.Image" alt="image" width="100" style=" width: 30rem; height: 100px; border-radius: 10px; object-fit: cover;" /></td>
                                <td>@Model.pageHeader.Title</td>
                                <td>@Model.pageHeader.Subtitle</td>
                                <td>
                                    <a asp-controller="blog" asp-action="updateHeader" asp-route-id="@Model.pageHeader.Id" class="btn btn-primary"><i class="fas fa-pen"></i> Update</a>
                                </td>
                            }
                            else
                            {
                                <td class="alert alert-danger">Page Header  boshdur Xais olunur elave edin</td>
                            }
                        </tr>
                        <tr>
                            @if (Model.pageHeaderDetails != null)
                            {
                                <td><img src="~/Uploads/Images/PageHeader/@Model.pageHeaderDetails.Image" alt="image" width="100" style=" width: 30rem; height: 100px; border-radius: 10px; object-fit: cover;" /></td>
                                <td>@Model.pageHeaderDetails.Title</td>
                                <td>@Model.pageHeaderDetails.Subtitle</td>
                                <td>
                                    <a asp-controller="blog" asp-action="updateheaderdetails" asp-route-id="@Model.pageHeaderDetails.Id" class="btn btn-primary"><i class="fas fa-pen"></i> Update</a>
                                </td>
                            }
                            else
                            {
                                <td class="alert alert-danger">Page Header Details  boshdur Xais olunur elave edin</td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blogs</h4>
                <div class="mr-2 mb-2">
                    <a asp-controller="blog" asp-action="category" class="btn btn-danger">Category</a>
                    <a asp-controller="blog" asp-action="tag" class="btn btn-inverse-primary">Tags</a>
                </div>
                <ul class="nav nav-tabs tab-solid  tab-solid-primary" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="tab-6-1" data-toggle="tab" href="#firstTable" role="tab" aria-controls="home-6-1" aria-selected="true"><i class="mdi mdi-home-outline"></i>Blogs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="tab-6-2" data-toggle="tab" href="#secondTable" role="tab" aria-controls="profile-6-2" aria-selected="false"><i class="mdi mdi-account-outline"></i>Create</a>
                    </li>
                </ul>
                <div class="tab-content tab-content-solid">
                    <div class="tab-pane fade active show" id="firstTable" role="tabpanel" aria-labelledby="tab-6-1">
                        <div class="row">
                            <div class="col-md-12">
                                <partial name="ViewAll" />
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="secondTable" role="tabpanel" aria-labelledby="tab-6-2">
                        <partial name="Create" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
