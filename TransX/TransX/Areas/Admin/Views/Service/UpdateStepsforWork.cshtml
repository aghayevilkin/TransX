@model ServiceStepsforWork
@{
    ViewData["Title"] = "Update Steps for Work";
}

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="mt-5">Update Steps for Work</h2>
            </div>
            <div class="col-6">
                <form asp-controller="service" asp-action="UpdateStepsforWork" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" asp-for="Title" placeholder="Title">
                        <span id="messages" asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Subtitle</label>
                        <input type="text" class="form-control" id="title" asp-for="SubTitle" placeholder="Subtitle">
                        <span id="messages" asp-validation-for="SubTitle" class="text-danger"></span>
                    </div>

                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <button asp-action="index" class="btn btn-danger">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>