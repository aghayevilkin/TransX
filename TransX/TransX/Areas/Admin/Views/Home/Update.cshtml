@model HomeAbout
@{
    ViewData["Title"] = "Update Home About";
}

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="mt-5">Update Home About</h2>
            </div>
            <div class="col-6">
                <form asp-controller="home" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="Name">Title</label>
                        <input type="text" class="form-control" id="title" asp-for="Title" placeholder="Title">
                        <span id="messages" asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Content">Content</label>
                        <textarea class="form-control" id="Content" asp-for="Content" rows="6"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExperianceTransportation">ExperianceTransportation</label>
                        <input class="form-control" asp-for="ExperianceTransportation" placeholder="Experiance Transportation">
                        <span id="messages" asp-validation-for="ExperianceTransportation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SkilledDrivers">Skilled Drivers</label>
                        <input class="form-control" asp-for="SkilledDrivers" placeholder="Skilled Drivers">
                        <span id="messages" asp-validation-for="SkilledDrivers" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MillesDrivenPerYear">Skilled Drivers</label>
                        <input class="form-control" asp-for="MillesDrivenPerYear" placeholder="Milles Driven Per Year">
                        <span id="messages" asp-validation-for="MillesDrivenPerYear" class="text-danger"></span>
                    </div>

                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <button asp-action="index" class="btn btn-danger">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>