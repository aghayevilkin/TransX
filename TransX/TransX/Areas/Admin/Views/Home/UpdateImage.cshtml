@model HomeImage
@{
    ViewData["Title"] = "Update Home Image";
}


<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form asp-area="admin" asp-controller="home" asp-action="updateimage" method="post" id="basic-form" enctype="multipart/form-data">
                    <div class="input-file">
                        <span id="messages" asp-validation-for="ImageFile" class="text-danger"></span>
                        <img id="file_upload" src="~/Uploads/Images/Home/@Model.Image" alt="your image" class="upload-img" />
                        <div class="input-file-upload">
                            <span class="upload-label">Upload Image</span>
                            <input type='file' id="image" onchange="readURL(this);" asp-for="ImageFile" />
                        </div>
                    </div>

                    <input type="hidden" name="Id" value="@Model.Id" />
                    <input type="hidden" name="Image" value="@Model.Image" />
                    <button type="submit" id="submitbtn" class="btn btn-primary">Update</button>
                    <button asp-action="index" class="btn btn-danger">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>