@model List<RequestQuote>
@{
    ViewData["Title"] = "Request a Quote";
    var counter = 0;
}


<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"></h4>
            <div class="mr-2">
                <h4 class="card-title">Request a Quote</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="btn-dark">
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Request Quote
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Added Date
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="btn btn-dark rounded-bottom rounded-right">@{counter++;}@counter.</td>
                                    <td>
                                    <p class="btn btn-primary"><i class="fas fa-map-marker-alt"></i> From: @item.From</p>
                                        <br />
                                    <p class="btn btn-danger"><i class="fas fa-map-marker-alt"></i>To: @item.To</p>
                                        <br />
                                    <p class="btn btn-success"><i class="fas fa-calendar-day"></i>When: @item.When.ToString("dd MMMM yyyy | H:mm")</p>
                                        <br />
                                    <p class="btn badge-warning"><i class="fa fa-eercast"></i>Transport: @item.Service.Title</p>
                                    </td>
                                    <td><p class="btn badge-info"><i class="fa fa-eercast"></i>@item.User.Email</p></td>
                                    <td><p class="btn badge-success"><i class="fas fa-calendar-day"></i>@item.AddedDate.ToString("dd MMMM yyyy | H:mm")</p></td>
                                    <td><a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="home" asp-action="RequestQuoteDelete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>Subscriber list is empty</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>